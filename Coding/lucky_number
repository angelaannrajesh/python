# Lucky Number Game
from random import randint
random = randint(20,100)

print("Enter yes or no: ")
question = input("Welcome to the Lucky Number game. Would you like to play? ")
if question == "yes":
    print("Ok lets start the game")
    roll = input("How many times would you like to roll the dice, 1,2,3 time? ")
elif question == "no":
    print("Ok...thank you for informing.")
    print("Bye")
else:
    print("Please answer in lowercase and have correct spelling")

if roll == "1":
    print(f"Your number is {random} !!!")
elif roll == "2":
    print(f"Your number is {random} !!!")
elif roll == "3":
    print(f"Your number is {random} !!!")

if random >= 20 and random < 40:
    print("YOUR NOT LUCKY ")
elif random >= 40 and random < 60 :
    print("YOUR A BIT LUCKY")
else:
    print("YOU ARE THE LUCKIEST PERSON EVER")

ask = input("What do you think of this game, is it bad , alright or good: ")
if ask == "bad":
    print("Well that might be because your a negative thinker and not so honest")
elif ask == "alright":
    print("Thanks but could've given a better comment")
elif ask == "good":
    print("Thank you, I can see very clearly that you are being honest")
else:
    print("Please reply in lowercase, and you can only say , good, alright and bad")

